<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <title>Sunscreen Database</title>
</head>
<body>
  <header>
    <h1>Sunscreen Database</h1>
  </header>
  <main>
    <section class="search-ui">
      <input id="search">
      <button>Search</button>
    </section>
    <section class="searchResults">
      <section>
        <p id="brand"></p>
        <p id="name"></p>
        <p id="spf"></p>
        <p id="form"></p>
        <p id="type"></p>
        <p id="finish"></p>
        <p id="price"></p>
        <p id='ingredientsLabel'></p>
        <p id="ingredients"></p>
        <p id="likes"></p>
      </section>
      <section>
        <img src="" id="resultImg">
      </section>
    </section>
    <section class="allSunscreens">
      <h2>All Sunscreens</h2>
      <ul class="sunscreenList">
      <% for (let i = 0; i < info.length; i++) {%>
        <li class="sunscreen"> 
          <section>
            <h3><%= info[i].brand %></h3>
            <h3><%= info[i].name %></h3>
            <ul>
              <li><%= `SPF: ${info[i].spf}` %></li>
              <li><%= `Form: ${info[i].form}` %></li>
              <li><%= `Type: ${info[i].type}` %></li>
              <li><%= `Finish: ${info[i].finish}` %></li>
              <li><%= `Price: $${(Number(info[i].priceUSD) / Number(info[i].ounces)).toFixed(2)} / ounce` %></li>
              <li><%= `Ingredients: ${info[i].ingredients}` %>
              <!-- iterating through ingredients if saved as array:
                <ul>
                  <% for (let j = 0; j < info[i].ingredients.length; j++) {%>
                    <li><%= info[i].ingredients[j] %></li>
                  <% } %>
                </ul> -->
              </li>
            </ul>
            <span><%= info[i].likes %></span><span> Likes</span>
            <button class="addLike">Like</span>
          </section>
          <section>
            <img src= <%= info[i].imageURL %> >
          </section>
        </li>
      <% } %>
      <ul>
    </section>
    <section class="addSunscreenForm">
      <h2>Add a Sunscreen</h2>
      <form action="/addSunscreen" method="POST">
        <div class="formControl">
          <label for="brand">Brand:</label>
          <input type="text" id="brand" name="brand" required>
        </div>
        <div class="formControl">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div class="formControl">
          <label for="spf">SPF:</label>
          <input type="text" id="spf" name="spf" required>
        </div>
        <fieldset>
          <legend>Form:</legend>
          <ul>
            <li>
              <input type="radio" id="form_lotion" name="form" value="lotion">
              <label for="lotion">Lotion</label>
            </li>
            <li>
              <input type="radio" id="form_gel" name="form" value="gel">
              <label for="gel">Gel</label>
            </li>
            <li>
              <input type="radio" id="form_stick" name="form" value="stick">
              <label for="stick">Stick</label>
            </li>
            <li>
              <input type="radio" id="form_spray" name="form" value="spray">
              <label for="spray">Spray</label>
            </li>
          </ul>
        </fieldset>
        <fieldset>
          <legend>Type:</legend>
          <ul>
            <li>
              <input type="radio" id="type_chemical" name="type" value="chemical">
              <label for="chemical">Chemical</label>
            </li>
            <li>
              <input type="radio" id="type_physical" name="type" value="physical">
              <label for="physical">Physical</label>
            </li>
          </ul>
        </fieldset>
        <fieldset>
          <legend>Finish:</legend>
          <ul>
            <li>
              <input type="radio" id="finish_dewy" name="finish" value="dewy">
              <label for="dewy">Dewy</label>
            </li>
            <li>
              <input type="radio" id="finish_matte" name="finish" value="matte">
              <label for="matte">Matte</label>
            </li>
          </ul>
        </fieldset>
        <div class="formControl">
          <label for="ounces">Ounces:</label>
          <input type="text" id="ounces" name="ounces" >
        </div>
        <div class="formControl">
          <label for="price">Price (USD):</label>
          <input type="text" id="priceUSD" name="priceUSD" >
        <div class="formControl">
        <div class="formControl">
          <label for="ingredients">Ingredients:</label>
          <input type="text" id="ingredients" name="ingredients" >
        <div class="formControl">
        <div class="formControl">
          <label for="imageURL">Image Link:</label>
          <input type="url" id="imageURL" name="imageURL" >
        <div class="formControl">
        <input type="submit">
      </form>
    </section>
  </main>
  <script type="text/javascript" src="/js/main.js"></script>
</body>
</html>